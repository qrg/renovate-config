{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": ["before 4pm"],
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "vulnerabilityAlerts": {
    "addLabels": ["security"],
    "automerge": true
  },
  "rangeStrategy": "bump",
  "major": {
    "automerge": false,
    "groupName": "Major"
  },
  "minor": {
    "automerge": true,
    "groupName": "Minor"
  },
  "patch": {
    "automerge": true,
    "groupName": "Patch"
  },
  "pin": {
    "automerge": false,
    "groupName": "Pin"
  },
  "digest": {
    "automerge": false,
    "groupName": "Digest"
  },
  "node": {
    "supportPolicy": ["lts_latest"]
  },
  "regexManagers": [
    {
      "fileMatch": ["^.github/workflows/.+\\.ya?ml$"],
      "matchStrings": [
        "name: Use Node.js v(?<currentValue>.+)\n",
        "node-version: ['\"]?(?<currentValue>[^'\"]*)['\"]?"
      ],
      "depNameTemplate": "node",
      "lookupNameTemplate": "nodejs/node",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "node"
    }
  ]
}
